#include <iostream>
#include <string>

using namespace std;

class Mahasiswa {
private:
    string nama;
    int nim;
    float ipk;

public:
    void inputData() {
        cout << "Masukkan Nama Mahasiswa: ";
        getline(cin, nama);

        cout << "Masukkan NIM Mahasiswa: ";
        cin >> nim;

        cout << "Masukkan IPK Mahasiswa: ";
        cin >> ipk;

        cin.ignore();
    }

    void MenampilkanData() {
        cout << "\nD Mahasiswa\n";
        cout << "Nama: " << nama << endl;
        cout << "NIM: " << nim << endl;
        cout << "IPK: " << ipk << endl;
    }
};

int main() {
    Mahasiswa mahasiswa1;

    // Memasukkan data mahasiswa
    mahasiswa1.inputData();

    // Menampilkan data mahasiswa
    mahasiswa1.MenampilkanData();

    return 0;
}
